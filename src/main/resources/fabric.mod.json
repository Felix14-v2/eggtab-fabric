{
  "schemaVersion": 1,
  "id": "eggtab",
  "version": "${version}",

  "name": "Egg Tab",
  "description": "Moves all spawn eggs and enchanted books to separate creative tabs.",
  "environment": "client",
  "authors": ["Florens Pauwels"],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/eggtab-fabric",
    "sources": "https://github.com/florensie/eggtab-fabric",
    "issues": "https://github.com/florensie/eggtab-fabric/issues"
  },

  "license": "MIT",
  "icon": "assets/eggtab/icon.png",

  "entrypoints": {
    "client": ["be.florens.eggtab.EggTab"],
    "modmenu": ["be.florens.eggtab.config.ModMenuConfig"]
  },

  "mixins": [
    "eggtab.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "fabric": "*",
    "minecraft": ">=1.16"
  },
  "suggests": {
    "modmenu": "*"
  }
}
